<?xml version="1.0" encoding="utf-8"?>
<Project>
  <!-- Shared version and metadata across all projects -->
  <PropertyGroup>
    <Company>Sphere 10 Software</Company>
    <Authors>Herman Schoenfeld</Authors>
    <Copyright>Sphere 10 Software Pty Ltd</Copyright>
    <RepositoryUrl>https://github.com/HermanSchoenfeld/Hydrogen</RepositoryUrl>
    <RepositoryType>git</RepositoryType>
    <PackageProjectUrl>https://github.com/HermanSchoenfeld/Hydrogen</PackageProjectUrl>
    <PackageLicenseExpression Condition="'$(PackageLicenseFile)' == ''">MIT</PackageLicenseExpression>
    <PackageIconUrl>https://raw.githubusercontent.com/HermanSchoenfeld/Hydrogen/master/resources/branding/hydrogen-logo.png</PackageIconUrl>
    
    <!-- Version Management -->
    <Version>1.0.0</Version>
    <VersionPrefix>1.0.0</VersionPrefix>
    <AssemblyVersion>1.0.0</AssemblyVersion>
    <FileVersion>1.0.0</FileVersion>
    <InformationalVersion>1.0.0</InformationalVersion>
    
    <!-- Build Configuration -->
    <LangVersion>latest</LangVersion>
    <Nullable>enable</Nullable>
    <ImplicitUsings>disable</ImplicitUsings>
    
    <!-- NuGet Packaging -->
    <GeneratePackageOnBuild>true</GeneratePackageOnBuild>
    <IncludeSymbols>true</IncludeSymbols>
    <SymbolPackageFormat>snupkg</SymbolPackageFormat>
    
    <!-- Development vs Production References -->
    <!-- Set to false in CI/CD release builds to use NuGet references -->
    <UseLocalProjects Condition="'$(UseLocalProjects)' == ''">true</UseLocalProjects>
  </PropertyGroup>

  <!-- Package metadata defaults -->
  <PropertyGroup>
    <PackageTags>cryptography;framework;collections</PackageTags>
    <Description Condition="'$(Description)' == ''">Hydrogen Framework</Description>
  </PropertyGroup>

</Project>
